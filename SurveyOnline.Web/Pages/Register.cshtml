@page
@model SurveyOnline.Web.Pages.Register
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    Layout = "Shared/_Layout";
}

<div class="container d-flex justify-content-center align-items-start min-vh-100">
    <div class="centered-form mt-3 p-4 border rounded shadow-lg">
        <h2 class="text-center mb-4">@Localizer["Registration"]</h2>
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="@Model.User.UserName" class="form-label">@Localizer["Name"]</label>
                <input asp-for="@Model.User.UserName" class="form-control" placeholder="@Localizer["Enter your name"]" />
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="@Model.User.Email" class="form-label">@Localizer["Email"]</label>
                <input asp-for="@Model.User.Email" type="email" class="form-control" placeholder="@Localizer["Enter your email"]" />
            </div>
        
            <div class="form-group mb-4">
                <label asp-for="@Model.User.Password" class="form-label">@Localizer["Password"]</label>
                <input asp-for="@Model.User.Password" type="password" class="form-control" placeholder="@Localizer["Enter your password"]" />
            </div>
        
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            
            <button type="submit" class="btn btn-primary btn-block">@Localizer["Register"]</button>
        </form>
        <p class="text-center mt-3">
            @Localizer["Already have an account?"] <a href="@Url.Page("Login")">@Localizer["Login here"]</a>
        </p>
    </div>
</div>