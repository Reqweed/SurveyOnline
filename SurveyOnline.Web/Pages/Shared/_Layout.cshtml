@using Index = SurveyOnline.Web.Pages.Index
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    </head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- Sidebar with Tabs on the left -->
        <div class="col-md-3 col-lg-2 bg-light vh-100">
            <ul class="nav flex-column nav-pills mt-3">
                @if (!User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-page="@nameof(Login)">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="@nameof(Register)">Registration</a>
                    </li>
                }
                else
                {
                    <form method="post" asp-page="@nameof(Index)" asp-page-handler="Logout">
                        <button type="submit" class="nav-link btn btn-link">Logout</button>
                    </form>
                }
                <li class="nav-item">
                    <a class="nav-link" asp-page="@nameof(AdminPanel)">Admin Panel</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-page="@nameof(SurveyConstructor)">Survey Constructor</a>
                </li>
            </ul>
        </div>

        <div class="col-md-9 col-lg-10">
            <div class="row bg-light py-3">
                <div class="col-12">
                    <input type="text" class="form-control" placeholder="Search...">
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>
    </div>
</div>

@await RenderSectionAsync("Scripts", required: false)

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>