@page
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SurveyOnline.Web.Pages.AdminPanel

@{
    Layout = "Shared/_Layout";
}

<div class="container-fluid mt-3">
    <div class="row">
        <div class="col-12">
            <form method="post">
                <div class="d-flex flex-wrap gap-2 mb-3">
                    <button type="submit" class="btn btn-secondary" asp-page-handler="Block">@Localizer["Block"]</button>
                    <button type="submit" class="btn btn-secondary" asp-page-handler="Unblock">@Localizer["Unblock"]</button>
                    <button type="submit" class="btn btn-danger" asp-page-handler="Delete">@Localizer["Delete"]</button>
                    <button type="submit" class="btn btn-secondary" asp-page-handler="MakeAdmin">@Localizer["Make Admin"]</button>
                    <button type="submit" class="btn btn-secondary" asp-page-handler="MakeUser">@Localizer["Make User"]</button>
                </div>

                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table">
                        <tr>
                            <th>
                                <input class="form-check-input" type="checkbox" />
                            </th>
                            <th>@Localizer["Name"]</th>
                            <th>@Localizer["Email"]</th>
                            <th>@Localizer["Role"]</th>
                            <th>@Localizer["Status"]</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr>
                                <td>
                                    <input class="form-check-input" name="SelectedUsers" type="checkbox" value="@user.Id" />
                                </td>
                                <td>@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td>@user.Status</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="js/table-checkboxes.js"></script>
